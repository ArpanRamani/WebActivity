<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/brandonblack"
                android:padding="@dimen/_5sdp"
                android:text="Categorise"
                android:textColor="#666126"
                android:textAllCaps="true"
                android:textSize="@dimen/_20ssp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_150sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:background="@drawable/round_bk2">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/brandonblack"
                        android:padding="@dimen/_25sdp"
                        android:text="By The Car "
                        android:textColor="#000000"
                        android:textSize="@dimen/_20ssp" />

                    <Button
                        android:id="@+id/btnCar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:background="#00000000"
                        android:padding="@dimen/_15sdp"
                        android:text="Expand All"
                        android:textColor="#000000"
                        android:textSize="@dimen/_13ssp" />

                </RelativeLayout>

                <ImageView
                    android:layout_width="@dimen/_130sdp"
                    android:layout_height="@dimen/_130sdp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="-50dp"
                    android:background="@drawable/caricon" />


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_150sdp"
                android:layout_margin="@dimen/_10sdp"
                android:background="@drawable/foobblack">

                <ImageView
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:background="@drawable/restauranticon" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:fontFamily="@font/brandonblack"
                    android:padding="@dimen/_20sdp"
                    android:text="restaurants"
                    android:textAllCaps="true"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/_15ssp" />


                <Button
                    android:id="@+id/btnRestaurants"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:background="#00000000"
                    android:padding="@dimen/_15sdp"
                    android:text="Expand All"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/_13ssp" />


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_130sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:background="@drawable/round_bk3">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/brandonblack"
                        android:padding="@dimen/_25sdp"
                        android:text="hospital "
                        android:textAllCaps="true"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/_20ssp" />

                    <Button
                        android:id="@+id/btnHospital"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:background="#00000000"
                        android:padding="@dimen/_15sdp"
                        android:text="Expand All"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/_13ssp" />

                </RelativeLayout>

                <ImageView
                    android:layout_width="@dimen/_130sdp"
                    android:layout_height="@dimen/_130sdp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="-15dp"
                    android:background="@drawable/hospital" />


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_150sdp"
                android:layout_margin="@dimen/_10sdp"
                android:background="@drawable/round_bk5">

                <ImageView
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:background="@drawable/shop" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:fontFamily="@font/brandonblack"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:padding="@dimen/_25sdp"
                    android:text="shop"
                    android:textAllCaps="true"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/_20ssp" />

                <Button
                    android:id="@+id/btnShop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:background="#00000000"
                    android:padding="@dimen/_15sdp"
                    android:text="Expand All"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/_13ssp" />


            </RelativeLayout>


        </LinearLayout>


    </ScrollView>


</LinearLayout>